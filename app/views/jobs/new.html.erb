<center>
    <h1>Add a post</h1>

    <%= form_for @job do |f| %>
        <div>
            <%= f.label :title %>
                <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :message %>
                <%= f.text_area :description, size: '60x6' %>
        </div>
        <div>
            <%= f.submit :Post %>
        </div>
        <% end %>
</center>